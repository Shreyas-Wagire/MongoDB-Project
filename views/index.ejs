<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChatMeet</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h3>All Chats</h3>
    <form action="/chats/new" method="GET" class="new-chat-form">
        <button class="new-chat-btn">New Chat</button>
    </form>
    <div class="chat-container">
        <% for(let chat of chats) { %>
            <div class="chat">
                <p class="from"><strong><%= chat.from %></strong></p>
                <p class="msg"><%= chat.msg %></p>
                <p class="to">To: <%= chat.to %></p>
                <div class="time">
                    <span><%= chat.time.toString().split(" ")[4] %></span>
                    <span><%= chat.time.toString().split(" ").slice(0, 4).join(" ") %></span>
                </div>
                <!-- Edit Button -->
                <form action="/chats/<%= chat._id%>/edit" method="GET" class="edit-form">
                    <button class="edit-btn">Edit</button>
                </form>
            </div>
        <% } %>
    </div>
</body>
</html>
